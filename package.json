{
  "name": "blog-app",
  "version": "1.0.0",
  "description": "Full-stack blog application with React frontend and Express backend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "bash scripts/build_frontend.bash",
    "build:start": "npm run build && npm run start:prod",
    "start:with-build": "npm run build && npm run start:prod",
    "start": "cd backend && npm run start",
    "start:prod": "cd backend && npm run start:prod",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "cd e2e && npm test",
    "test:all": "npm run test && npm run test:e2e",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../e2e && npm install",
    "lint": "concurrently \"npm run lint:backend\" \"npm run lint:frontend\"",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "e2e:install": "cd e2e && npm run install",
    "e2e:ui": "cd e2e && npx playwright test --ui",
    "e2e:report": "cd e2e && npx playwright show-report"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "backend",
    "frontend",
    "e2e"
  ],
  "keywords": [
    "blog",
    "react",
    "express",
    "mongodb",
    "fullstack"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0"
  }
}
