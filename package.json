{
  "name": "blog-app",
  "version": "1.0.0",
  "description": "Full-stack blog application with React frontend and Express backend",
  "private": true,
  "main": "backend/index.js",
  "scripts": {
    "dev": "NODE_ENV=development && concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && NODE_ENV=development node --watch index.js",
    "dev:frontend": "cd frontend && vite",
    "dev:backend:e2e": "cd backend && NODE_ENV=test node --watch index.js",
    "build": "bash scripts/build_frontend.bash",
    "build:render": "bash scripts/build_for_render.sh",
    "build:start": "npm run build && npm run start:prod",
    "start:with-build": "npm run build && npm run start:prod",
    "start": "cd backend && npm run start",
    "start:prod": "NODE_ENV=production && cd backend && npm run start:prod",
    "start:test": "NODE_ENV=test && cd backend && npm run start:test",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:backend": "cd backend && npm test",
    "test:frontend": "vitest run",
    "test:e2e": "cd e2e && npm test",
    "test:all": "npm run test && npm run test:e2e",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../e2e && npm install",
    "lint": "concurrently \"npm run lint:backend\" \"npm run lint:frontend\"",
    "lint:backend": "eslint backend/",
    "lint:frontend": "eslint frontend/",
    "e2e:install": "npx playwright install --with-deps",
    "e2e:ui": "npx playwright test --ui",
    "e2e:report": "npx playwright show-report",
    "preview": "vite preview"
  },
  "workspaces": [
    "backend",
    "frontend",
    "e2e"
  ],
  "keywords": [
    "blog",
    "react",
    "express",
    "mongodb",
    "fullstack"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "concurrently": "^8.2.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^4.4.5",
    "@vitejs/plugin-react": "^4.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "eslint": "^8.57.0",
    "globals": "^16.1.0",
    "supertest": "^7.1.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "jsdom": "^26.1.0",
    "vitest": "^3.1.4",
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.29"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "e2e-tests"
    ]
  }
}
